<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head.ejs") %> 
    <body>
        <main>
            <form action="/aram" method="post">
                <select name="mode" id="mode">
                    <option value="aram">Aram</option>
                    <option value="rift">Grieta</option>
                </select>
                <% for( let i = 0; i < data.list.length; i++ ) { %>
                    <% let player = data.list[i] %> 
                    <% let teams = [...lista.teamOne, ...lista.teamTwo].map(p => p.name) %> 
                    <input type="checkbox" name="players" id="p<%= player.id %>" value="<%= player.id %>" <%= teams.includes(player.name) ? "checked" : "" %>>
                    <label for="p<%= player.id %>"><%= player.name %></label>
                <% } %>
                <%// console.log(acc) %> 
                <button type="submit">Armar equipos</button>
            </form>
            <div>
                <section>
                    <span>
                        <h2>Equipo 1</h2>
                        <% for( let i = 0; i < lista.teamOne.length; i++ ) { %>
                            <p><%= lista.teamOne[i].name %></p>
                        <% } %>
                    </span>
                    <br>
                    <span>
                        <h2>Equipo 2</h2>
                        <% for( let i = 0; i < lista.teamTwo.length; i++ ) { %>
                            <p><%= lista.teamTwo[i].name %></p>
                        <% } %>
                    </span>
                </section>
                <section>
                    
                </section>
            </div>
            <% lista %> 

        </main>
    </body>
</html>